        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ genreName }}</li>
            </ol>
        </nav>
        <div class="row">
            <div class="col-9">
                {% include '_movies.html.twig' with {'movies' : movieList, 'totalPages': totalPages, 'page': page} %}
            </div>
        </div>
    </div>
    {% include '_movie_modal.html.twig' %}
{% endblock %}