{% extends 'base.html.twig' %}
{% block javascripts %}
    <script>
        const homeRoute = "{{ path('movies_by_genre' , {'genreName': genreName, 'genreId': genreId})|escape('js') }}";
    </script>
    {{ parent() }}
    {{ encore_entry_script_tags('movie') }}
{% endblock %}
{% block body %}
